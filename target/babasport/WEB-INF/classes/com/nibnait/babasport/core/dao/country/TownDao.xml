<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.nibnait.babasport.core.dao.country.TownDao">
	<resultMap id="town" type="Town">
		<result property="id" column="id" />
		<result property="code" column="code" />
		<result property="name" column="name" />
		<result property="city" column="city" />
	</resultMap>
	<!-- Select SQL -->
	<sql id="townSelector">
		SELECT
			<if test="fields != null">
				${fields}
			</if>
			<if test="fields == null">
			id,code,name,city
			</if>
		FROM bbs_town
	</sql>
	<sql id="townListWhere">
		<where>
				<if test="id != null">
					and id=#{id}
				</if>
				<if test="code != null">
				<if test="codeLike == false">
					and code=#{code}
				</if>
				<if test="codeLike == true">
					and  code like "%"#{code}"%"
				</if>
				</if>
				<if test="name != null">
				<if test="nameLike == false">
					and name=#{name}
				</if>
				<if test="nameLike == true">
					and  name like "%"#{name}"%"
				</if>
				</if>
				<if test="city != null">
				<if test="cityLike == false">
					and city=#{city}
				</if>
				<if test="cityLike == true">
					and  city like "%"#{city}"%"
				</if>
				</if>
		</where>
	</sql>

	<sql id="townListOrder">
		<if test="orderFields != null and orderFields.size >0">
		order by 
			<foreach collection="orderFields" separator="," item="orderField">
				${orderField.fieldName} ${orderField.order}
			</foreach>
		</if>
	</sql>

	<sql id="townListLimit">
		<if test="startRow != null">
			limit #{startRow},#{pageSize}
		</if>
	</sql>

	<!-- 根据主键查询 -->
	<select id="getTownByKey" resultMap="town" parameterType="hashMap">
		SELECT id,code,name,city FROM bbs_town
		WHERE
		id=#{id}
	</select>
	<select id="getTownsByKeys" resultMap="town" parameterType="ArrayList">
		SELECT id,code,name,city FROM bbs_town
		WHERE
		id in
		<foreach collection="list" separator="," item="id" open="(" close=")">
			#{id}
		</foreach>
	</select>

	<!-- 根据主键删除 -->
	<delete id="deleteByKey" parameterType="hashMap">
		DELETE FROM bbs_town
		WHERE
		id=#{id}
	</delete>

	<!-- 根据主键批量删除 -->
	<delete id="deleteByKeys">
		DELETE FROM bbs_town
		WHERE
		id in
		<foreach collection="list" separator="," item="id" open="(" close=")">
			#{id}
		</foreach>
	</delete>

	<!-- 根据主键更新 -->
	<update id="updateTownByKey" parameterType="Town">
		UPDATE bbs_town
		<set>
			<trim suffixOverrides=",">
				<if test="id != null">
					id = #{id},
				</if>
				<if test="code != null">
					code = #{code},
				</if>
				<if test="name != null">
					name = #{name},
				</if>
				<if test="city != null">
					city = #{city}
				</if>
			</trim>
		</set>
		WHERE
		id=#{id}
	</update>
	<!-- 分页 -->
	<select id="getTownListWithPage" parameterType="TownQuery" resultMap="town">
		<include refid="townSelector" />
		<include refid="townListWhere" />
		<include refid="townListOrder" />
		<include refid="townListLimit" />
	</select>
	<!-- 数据总数 -->
	<select id="getTownListCount" parameterType="TownQuery" resultType="int">
		SELECT count(1) FROM bbs_town
		<include refid="townListWhere" />
	</select>
	<!-- 数据集合 -->
	<select id="getTownList" parameterType="TownQuery" resultMap="town">
		<include refid="townSelector" />
		<include refid="townListWhere" />
		<include refid="townListOrder" />
	</select>
	<!-- 添加 -->
	<insert id="addTown" parameterType="Town">
		INSERT INTO bbs_town
		<trim prefix="(" suffix=")" suffixOverrides=",">
				<if test="id != null">
					id,
				</if>
				<if test="code != null">
					code,
				</if>
				<if test="name != null">
					name,
				</if>
					<if test="city != null">
						city
					</if>
		</trim>
		VALUES
		<trim prefix="(" suffix=")" suffixOverrides=",">
					<if test="id != null">
						#{id},
					</if>
					<if test="code != null">
						#{code},
					</if>
					<if test="name != null">
						#{name},
					</if>
					<if test="city != null">
						#{city}
					</if>
		</trim>
	</insert>
</mapper>
